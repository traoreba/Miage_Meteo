<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

        <FrameLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/home_page_details_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <org.osmdroid.views.MapView
                    android:id="@+id/map_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tilesource="Grenoble"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/weather_card_view"
                android:layout_width="120dp"
                android:layout_height="72dp"
                android:backgroundTint="@android:color/transparent"
                android:layout_gravity="top|right"
                app:cardElevation="0dp"
                android:layout_margin="@dimen/margin_default">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/meteo_city_layout"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <TextView
                            android:id="@+id/weather_city"
                            android:layout_width="fill_parent"
                            android:layout_height="24dp"
                            android:gravity="center"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_min"
                            android:autoSizeMaxTextSize="@dimen/text_max"
                            android:text="Grenoble"
                            android:layout_weight="0.2"
                            android:textAlignment="center"
                            android:textColor="@color/textPrimary"
                            android:layout_marginRight="4dp"/>
                        <ImageView
                            android:id="@+id/weather_icon"
                            android:scaleType="fitXY"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            app:srcCompat="@drawable/ic_wb_sunny_24dp"
                            android:tint="@color/colorPrimary"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/meteo_details_layout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/weather_temperature"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="15°\n19°/5°\nnuageux"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="@dimen/text_min"
                            android:autoSizeMaxTextSize="@dimen/text_max"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:id="@+id/refresh_map"
                android:text="Recentrer"
                android:layout_marginBottom="@dimen/margin_default"/>
        </FrameLayout>
</RelativeLayout>